<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:textColorSecondary">@color/color_toolbar_text</item>
        <item name="actionOverflowMenuStyle">@style/PopupMenu</item>
        <item name="textAppearanceLargePopupMenu">@style/PopupMenuText</item>
    </style>

    <!--Toolbar-->
    <style name="Toolbar">
        <item name="android:textSize">@dimen/text_size_header</item>
        <item name="android:textColor">@color/color_toolbar_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/color_toolbar_background</item>
    </style>

    <!--Popup Menu-->
    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/color_toolbar_background</item>
    </style>

    <style name="PopupMenuText" parent="TextAppearance.AppCompat.Light.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/color_toolbar_text</item>
    </style>

    <!--Buttons-->
    <style name="Button">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/color_button_text</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--Alert Dialog-->
    <style name="AlertDialogTitle">
        <item name="android:textSize">@dimen/text_size_header</item>
        <item name="android:textColor">@color/color_alert_dialog_text</item>
    </style>

    <style name="AlertDialogCaption">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/color_alert_dialog_text</item>
        <item name="android:inputType">textMultiLine|textCapSentences</item>
    </style>

    <!--About Activity-->
    <style name="AboutText">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/color_about_text</item>
    </style>

</resources>
