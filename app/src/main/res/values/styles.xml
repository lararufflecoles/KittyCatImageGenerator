<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:textColorSecondary">@color/colorToolbarText</item>
        <item name="actionOverflowMenuStyle">@style/PopupMenu</item>
        <item name="textAppearanceLargePopupMenu">@style/PopupMenuText</item>
    </style>

    <!--Toolbar-->
    <style name="Toolbar">
        <item name="android:textSize">@dimen/textSizeHeader</item>
        <item name="android:textColor">@color/colorToolbarText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/colorToolbarBackground</item>
    </style>

    <!--Popup Menu-->
    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/colorToolbarBackground</item>
    </style>

    <style name="PopupMenuText" parent="TextAppearance.AppCompat.Light.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/colorToolbarText</item>
    </style>

    <!--Buttons-->
    <style name="Button">
        <item name="android:textSize">@dimen/textSizeNormal</item>
        <item name="android:textColor">@color/colorButtonText</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--Alert Dialog-->
    <style name="AlertDialogTitle">
        <item name="android:textSize">@dimen/textSizeHeader</item>
        <item name="android:textColor">@color/colorAlertDialogText</item>
    </style>

    <style name="AlertDialogCaption">
        <item name="android:textSize">@dimen/textSizeNormal</item>
        <item name="android:textColor">@color/colorAlertDialogText</item>
        <item name="android:inputType">textMultiLine|textCapSentences</item>
    </style>

    <!--About Activity-->
    <style name="AboutText">
        <item name="android:textSize">@dimen/textSizeNormal</item>
        <item name="android:textColor">@color/colorAboutText</item>
    </style>

</resources>
