<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:textColorSecondary">@color/colorToolbarText</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
    </style>

    <style name="Toolbar">
        <item name="android:textSize">@dimen/textSizeToolbar</item>
        <item name="android:textColor">@color/colorToolbarText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/colorToolbarBackground</item>
    </style>

    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/colorToolbarBackground</item>
    </style>

    <style name="Button">
        <item name="android:textSize">@dimen/textSizeNormal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AboutText">
        <item name="android:textSize">@dimen/textSizeNormal</item>
        <item name="android:textColor">@color/colorAboutText</item>
        <item name="android:textColorLink">@color/colorLinkText</item>
    </style>

</resources>